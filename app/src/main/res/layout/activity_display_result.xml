<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.ghini.pocket.DisplayResultsActivity">

    <TextView
        android:id="@+id/tvAccession"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFamily"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tvAccession"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvAccession"
        android:layout_marginRight="-1dp"
        app:layout_constraintRight_toRightOf="@+id/tvAccession"
        app:layout_constraintLeft_toRightOf="@+id/tvFamily"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/tvSpecies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tvAccession"
        app:layout_constraintRight_toRightOf="@+id/tvAccession"
        app:layout_constraintTop_toBottomOf="@+id/tvFamily"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/tvSource"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tvAccession"
        app:layout_constraintRight_toRightOf="@+id/tvAccession"
        app:layout_constraintTop_toBottomOf="@+id/tvSpecies"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/tvAcqDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/tvAccession"
        app:layout_constraintRight_toRightOf="@+id/tvAccession"
        app:layout_constraintTop_toBottomOf="@+id/tvSource"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/tvAccession"
        app:layout_constraintRight_toRightOf="@+id/tvAccession"
        app:layout_constraintTop_toBottomOf="@+id/tvAcqDate"
        app:layout_constraintHorizontal_bias="0.0" />
</android.support.constraint.ConstraintLayout>
