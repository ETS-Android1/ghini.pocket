<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.ghini.pocket.DisplayResultsActivity">

    <TextView
        android:id="@+id/tvFamily"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tvSpecies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvFamily"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/tvFamily"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/tvFamily"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/tvSource"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSpecies"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/tvFamily"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/tvFamily"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/tvAccession"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSource"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/tvFamily"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/tvFamily"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@+id/tvFamily"
        app:layout_constraintRight_toRightOf="@+id/tvFamily"
        app:layout_constraintTop_toBottomOf="@+id/tvAccession"
        app:layout_constraintHorizontal_bias="0.0" />
</android.support.constraint.ConstraintLayout>
